<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.VirtualCart.virtualcart">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cart"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.VirtualCart.virtualcart.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.VirtualCart.virtualcart.MainActivity"/>
        <activity android:name="com.VirtualCart.virtualcart.activities.MyOrders"/>
        <activity android:name="com.VirtualCart.virtualcart.activities.ShoppingCart"/>
        <activity android:name="com.VirtualCart.virtualcart.activities.ProductDetails"/>
        <service android:name="com.VirtualCart.virtualcart.service.SyncDBService"/>
    </application>

</manifest>